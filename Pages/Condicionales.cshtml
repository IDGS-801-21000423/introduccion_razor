@page
@model introduccion_razor.Pages.CondicionalesModel
@{
    var calificacion = 8;
}

<h3>Instrucciones Condicionales: </h3>
<p>Tu calificacion es de: @calificacion</p>
@if(calificacion >= 8)
{
    <p>Tu estatus es aprobado</p>
}
else
{
    <p>Tu estatus en recuperacion</p>
}
<br />

<h3>Instrucciones Else-If</h3>
@{
    var precio = 25;
}
<p>El precio actual del producto es: @precio</p>
@if(precio >= 30)
{
    <p>El precio es alto</p>
}
else if(precio > 20 && precio < 30)
{
    <p>El precio es normal</p>
}
else
{
    <p>El precio es bajo</p>
}
<br />

<h3>Condicionales Multiples</h3>
@{
    var diaSemana = DateTime.Now.DayOfWeek;
    var dia = diaSemana.ToString();
    var mensaje = "";
}

<!--Condicionale Switch-->
@switch (dia)
{
    case "Monday":
        mensaje = "Este es el primer dia de la semana";
        break;    
    case "Friday":
        mensaje = "Hoy es viernes y el cuerpo lo sabe";
        break;
    default:
        mensaje = "Hoy es: " + dia;
        break;
}
<p>@mensaje</p>
<br />