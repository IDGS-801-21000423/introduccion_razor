@page
@model introduccion_razor.Pages.SumaNumerosModel
@{
}
<h3>Suma de Dos Numeros</h3>

<form method="post">
    <p>Numero 1:<input type="number" step="0.1"  asp-for="num1"/></p>
    <p>Numero 2:<input type="number" step="0.1" asp-for="num2" /></p>
    <p><input type="submit" value="Calcular" /></p>

    @if(Model.suma != 0)
    {
        <div>
            <strong>Suma = @Model.suma</strong>
        </div>
    }
</form>

